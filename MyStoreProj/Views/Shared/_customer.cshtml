@using Microsoft.AspNetCore.Http;
@using mystore.Utilities;
@inject IHttpContextAccessor htppcontextaccessor;

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>MyShop</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/Customer/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Customer/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="#!">R.Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/Customer/Home/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!">About</a></li> 

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if(User.IsInRole(SD.AdminRole))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Admin/DashBoard">DashBoard</a></li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Setting</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#!">All Products</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" href="#!">My Order</a></li>
                                    <li><a class="dropdown-item" href="#!">Edit Profile</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
                <partial name="_LoginPartial" />
                <form class="d-flex">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-outline-dark" href="/Customer/Cart/Index">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                            @if (htppcontextaccessor.HttpContext.Session.GetInt32(SD.SessionKey) != null)
                            {
                                <span class="badge bg-dark text-white ms-1 rounded-pill">@htppcontextaccessor.HttpContext.Session.GetInt32(SD.SessionKey)</span>
                            }
                            else
                            {
                                <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                            }
                        </a>
                    }
                </form>
            </div>
        </div>
    </nav>
    <!-- Header-->

    <header class="py-5" style="background-color:darkblue;">
        <div class="container px-4 px-lg-5 my-5" >
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Welcome To Our Store</h1>
                <p class="lead fw-normal text-white-50 mb-0">All you need in one place</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    @RenderBody()
    <!-- Footer-->
    <footer class="py-5" style="background-color:darkblue">
        <div class="container"><p class="m-0 text-center text-white">Copyright &Rahma 2024</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/Customer/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
