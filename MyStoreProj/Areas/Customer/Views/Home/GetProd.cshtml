@using X.PagedList;
@using X.Web.PagedList


<br />
<h3 style="color:darkblue" class="text-center">@ViewBag.category</h3>
<section class="py-4">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var product in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <a href="\Customer\Home\Details\@product.Id"><img class="card-img-top" src="~/@product.Img" alt="..." width="450" height="300" /></a>
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@product.Name</h5>
                                <!-- Product price-->
                                $@product.Price
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="\Customer\Home\Details\@product.Id">View Details</a></div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("GetProd", "Home", new { page = page, name = ViewBag.category}))

            </div>
        </div>
    </div>
</section>