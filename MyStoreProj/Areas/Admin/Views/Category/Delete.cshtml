@using mystore.Entities.Models
@model Category

@{
    ViewData["Title"] = "Delete";
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Delete Category";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteCategory" method="post">
            <input hidden asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name"disabled class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" disabled class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-warning">Back to Index</a>
            </div>
        </form>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}